[
     {sasl,[
        {sasl_error_logger,         false},
        {errlog_type,               error},
        {error_logger_mf_dir,       "log/sasl"},      
        {error_logger_mf_maxbytes,  10485760},   
        {error_logger_mf_maxfiles,  5}           
    ]},

    {lager, [
        {log_root, "/log"},
            {colored, true},
            {handlers, [
            {lager_console_backend, [info,
                {lager_default_formatter, [
                    "[ ",severity," ]","[ ", date ," ]","[ ", time ," ] ",message, "\n"
                ]}
            ]},
            {lager_file_backend, [
                {file, "/opt/wsclient/error.log"},
                {level, error}
            ]},
            {lager_file_backend, [
                {file, "/opt/wsclient/console.log"},
                {level, info}
            ]}
        ]}
    ]},

    {wsclient,[
    	{config,"config/wsclient.conf"}
    ]}
].

